{% raw %}
<!DOCTYPE html>
<!--[if IE 9 ]><html class="ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--><html><!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <title>Uniqlo</title>
    <meta name="description" content="Uniqlo">

    <link rel="stylesheet" type="text/css" href="/dev/css/style.css">

    <!-- SOCIAL DATAS -->
    <!-- GOOGLE PLUS -->
    <meta itemprop="name" content="Uniqlo">
    <meta itemprop="description" content="Uniqlo">

    <!-- FACEBOOK -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Uniqlo Colors - {{trad.home.title}}">
    <meta property="og:url" content="http://uniqlocolors.eu/">
    <meta property="og:image" content="http://uniqlocolors.eu/dev/medias/share/share.png">
    <meta property="og:site_name" content="Uniqlo Colors">
    <meta property="og:description" content="{{trad.sharingText}}">


    <!-- TWITTER -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@Immersive_g">
    <meta name="twitter:creator" content="@Immersive_g">
    <meta name="twitter:title" content="Uniqlo">
    <meta name="twitter:description" content="Uniqlo">
    <meta name="twitter:image" content="/dev/medias/share/share.png">

    <link rel="icon" type="image/gif" href="/dev/medias/favicons/favicon.png">

    <!--[if lte IE 8]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    
    <!-- FONTS -->
    
</head>
<body class="desktop">

    <section class="body">

        <span class="uniqlo-logo main"></span>

        <style>
        {{#each product.pictures}}

            .state-{{@index}} h1,
            .state-{{@index}} .sub-play-text {
                color:{{color}};
            }

            .state-{{@index}} .play-button span {
                background:{{color}};
            }

            .state-{{@index}} .sub-play-text strong {
                border-bottom-color:{{color}};
            }

        {{/each}}
        </style>

        <section class="home">

            <span class="uniqlo-logo"></span>

            <div class="carousel">

                <div class="mask">

                    <header>
                        <p>{{{product.carousel_top}}}</p>
                    </header>

                    <ul class="slides">
                        {{#each product.pictures}}
                        <li>
                            <span class="img background" data-src="{{back}}"></span>
                            <div class="front">
                                <span class="img" data-src="{{front}}"></span>
                            </div>
                        </li>
                        {{/each}}
                    </ul>

                    <footer>
                        <div class="left">
                            <p class="name">{{{product.name}}}</p>
                            <p class="description">{{{product.description}}}</p>
                        </div>
                        <div class="right">
                            <p class="category">{{{product.category}}}</p>
                            <p class="price">{{product.price}}</p>
                            <p class="offer">{{product.offer}}</p>
                        </div>
                    </footer>

                </div>

            </div>

            <div class="content">
                <div class="mask">
                    <div class="inner">
                        <h1>{{trad.home.title}}</h1>
                        <h2>{{{trad.home.subtitle}}}</h2>
                        <p>{{{trad.home.info_1}}}</p>

                        <p class="button play-button"><span>{{trad.play}}</span></p>

                        <div class="already-text"><p>Already played Already played Already played Already played</p></div>

                        <p class="sub-play-text">{{trad.home.sub_play_button}} <strong>{{product.other_name}}</strong></p>
                        <p>{{{trad.home.info_2}}}</p>
                    </div>
                </div>
            </div>

        </section>
            
        
        <section class="game hidden">

            <canvas></canvas>

            <p class="lives"><span>3</span><sub>{{trad.tries_left}}</sub></p>
            <p class="level"><span>3</span><sup>/12</sup><sub>{{trad.levels}}</sub></p>

        </section>

        <section class="try-again screen">

            <div class="content">
                <p class="title">{{{trad.try_again}}}</p>

                <div class="status">
                    <p class="lives"><span>2</span><sub>{{trad.tries_left}}</sub></p>
                    <p class="level"><span>10</span><sub>{{trad.levels}}</sub></p>
                </div>

                <div class="button try-again"><span>{{trad.play}}</span></div>
            </div>

        </section>

        <section class="game-over screen">

            <div class="content">
                <p class="title">{{{trad.game_over}}}</p>

                <p class="text">
                    {{{trad.game_over_text}}}
                </p>

                <ul>
                    <li class="facebook"></li>
                    <li class="twitter"><a href="http://twitter.com/intent/tweet?url=http://uniqlocolors.eu&text={{trad.sharingText}}"></a></li>
                    

                    <!--<li class="facebook"><div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button"></div></li>
                    <li class="twitter"><a href="https://twitter.com/share" class="twitter-share-button" data-count="none">Tweet</a></li>
                    <li class="google"></li>-->
                </ul>

                <p class="replay-button button"><span>Play again</span></p>

                <div class="get-notified"><p>{{{trad.get_notified}}}</p></div>
            </div>

        </section>

        <section class="screen win">
            <div class="content">
                <p class="title">Yeah!</p>

                <div class="letter">
                    <div class="enveloppe"></div>
                    <div class="push">
                        <p>{{trad.form.get_a_chance}}<strong>Cashmere</strong></p>
                        <img src="/temp/win.jpg" />
                        <span class="img" data-src="medias/temp/win.jpg"></span>
                    </div>
                </div>

                <form>
                    <p class="info">{{{trad.win.info}}}</p>

                    <p class="input-text">
                        <input class="text" name="firstName" id="win-firstname" />
                        <span>{{trad.form.firstname}}</span>
                    </p>

                    <p class="input-text">
                        <input class="text" name="lastName" id="win-lastname" />
                        <span>{{trad.form.lastname}}</span>
                    </p>

                    <p class="input-text">
                        <input class="text" name="email" id="win-email" />
                        <span>{{trad.form.email}}</span>
                    </p>

                    <div class="radios">
                        <p class="radio">
                            <input type="radio" value="female" name="gender" />
                            <i></i>
                            <span>{{trad.form.female}}</span>
                        </p>
                        <p class="radio">
                            <input type="radio" value="male" name="gender" />
                            <i></i>
                            <span>{{trad.form.male}}</span>
                        </p>
                    </div>

                    <p class="checkbox">
                        <input type="checkbox" name="remind-me" />
                        <i></i>
                        <span>{{trad.form.remind_me}}
                    </p>

                    <p class="checkbox">
                        <input type="checkbox" name="kep-me-poster" />
                        <i></i>
                        <span>{{trad.form.keep_me_posted}}
                    </p>

                    <p class="button submit"><span>{{trad.form.submit}}</span></p>

                </form>
            </div>
        </section>

        <section class="screen loose">
            <div class="content">
                
                <div class="squares">
                    <span class="grey"></span>
                    <span class="grey"></span>
                    <span class="red"></span>
                    <span class="black"></span>
                    <span class="black"></span>
                    <span class="black"></span>
                    <span class="grey"></span>
                    <span class="black"></span>
                    <span class="grey"></span>
                </div>
                <div class="no-try"><p>You have no more tries left</p></div>
                <p>Come back tomorrow for a new try.</p>
            </div>
        </section>

        <section class="tuto screen">
            <div class="content">
                <div class="squares">
                    <span class="grey"></span>
                    <span class="grey"></span>
                    <span class="red"></span>
                    <span class="black"></span>
                    <span class="black"></span>
                    <span class="black"></span>
                    <span class="grey"></span>
                    <span class="black"></span>
                    <span class="grey"></span>
                </div>
                <div class="text">{{{trad.tuto}}}</div>
                <div class="loading"><span>{{trad.loading}}</span></div>
                <div class="button start-button"><span>{{trad.start}}</span></div>
            </div>
        </section>

        <footer class="main-footer">
            <ul>
                <li href="" target="_blank">{{trad.footer.rules.text}}</li>
                <li href="" target="_blank">{{trad.footer.privacy_policy.text}}</li>
                <li href="" target="_blank">{{trad.footer.terms_of_use.text}}</li>
                <li href="" target="_blank">{{trad.footer.credits.text}}</li>
                <li class="facebook-link"><a href="{{trad.footer.facebook}}" target="_blank"><i></i></a></li>
                <li class="twitter-link"><a href="{{trad.footer.twitter}}" target="_blank"><i></i></a></li>
                <li class="google-link"><a href="{{trad.footer.google}}" target="_blank"><i></i><a/></li>
                <li class="instagram-link"><a href="{{trad.footer.instagram}}" target="_blank"><i></i></a></li>
            </ul>
        </footer>

    </section>

    <script>

        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
