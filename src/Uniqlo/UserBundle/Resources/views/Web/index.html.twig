<!DOCTYPE html>
<!--[if IE 9 ]><html class="ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--><html><!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <title>Uniqlo Colors - {{ 'home_title'|trans }}</title>
    <meta name="description" content="{{ 'meta_description'|trans }}">

    <link rel="stylesheet" type="text/css" href="/dev/css/style.css">

    <!-- SOCIAL DATAS -->
    <!-- GOOGLE PLUS -->
    <meta itemprop="name" content="Uniqlo Colors - {{ 'home_title'|trans }}">
    <meta itemprop="description" content="{{ 'meta_description'|trans }}">

    <!-- FACEBOOK -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Uniqlo Colors - {{ 'home_title'|trans }}">
    <meta property="og:url" content="http://uniqlocolors.eu/">
    <meta property="og:image" content="http://uniqlocolors.eu/dev/medias/share/share.png">
    <meta property="og:site_name" content="Uniqlo Colors">
    <meta property="og:description" content="{{ 'meta_description'|trans }}">


    <!-- TWITTER -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="{{ 'twitter_account'|trans }}">
    <meta name="twitter:creator" content="{{ 'twitter_account'|trans }}">
    <meta name="twitter:title" content="Uniqlo Colors - {{ 'home_title'|trans }}">
    <meta name="twitter:description" content="{{ 'meta_description'|trans }}">
    <meta name="twitter:image" content="/dev/medias/share/share.png">

    <link rel="icon" type="image/gif" href="/dev/medias/favicons/favicon.png">

    <!--[if lte IE 8]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

</head>
<body class="desktop">

    <section class="body">

        <span class="uniqlo-logo main"></span>

        <style>

            .state-0 h1,
            .state-0 .sub-play-text {
                color:{{ 'week_1_product_1_color'|trans }};
            }

            .state-0 .play-button span {
                background:{{ 'week_1_product_1_color'|trans }};
            }

            .state-0 .sub-play-text strong {
                border-bottom-color:{{ 'week_1_product_1_color'|trans }};
            }

            .state-1 h1,
            .state-1 .sub-play-text {
                color:{{ 'week_1_product_1_color'|trans }};
            }

            .state-1 .play-button span {
                background:{{ 'week_1_product_1_color'|trans }};
            }

            .state-1 .sub-play-text strong {
                border-bottom-color:{{ 'week_1_product_1_color'|trans }};
            }

        </style>

        <section class="home">

            <span class="uniqlo-logo"></span>

            <div class="carousel">

                <div class="mask">

                    <header>
                        <p>{{ 'home_carousel_title'|trans|raw }}</p>
                    </header>

                    <ul class="slides">
                        <li>
                            <span class="img background" data-src="/dev/medias/home/{{ 'week_1_product_1_back'|trans }}"></span>
                            <div class="front">
                                <span class="img" data-src="/dev/medias/home/{{ 'week_1_product_1_front'|trans }}"></span>
                            </div>

                            <footer>
                                <div class="left">
                                    <p class="name">{{ 'week_1_product_1_name'|trans }}</p>
                                    <p class="description">{{ 'week_1_product_1_description'|trans }}</p>
                                </div>
                                <div class="right">
                                    <p class="category">{{ 'week_1_product_1_category'|trans }}</p>
                                    <p class="price">{{ 'week_1_product_1_price'|trans }}</p>
                                    <p class="offer">{{ 'week_1_product_1_offer'|trans }}</p>
                                </div>
                            </footer>
                        </li>
                        <li>
                            <span class="img background" data-src="/dev/medias/home/{{ 'week_1_product_2_back'|trans }}"></span>
                            <div class="front">
                                <span class="img" data-src="/dev/medias/home/{{ 'week_1_product_2_front'|trans }}"></span>
                            </div>

                            <footer>
                                <div class="left">
                                    <p class="name">{{ 'week_1_product_2_name'|trans }}</p>
                                    <p class="description">{{ 'week_1_product_2_description'|trans }}</p>
                                </div>
                                <div class="right">
                                    <p class="category">{{ 'week_1_product_2_category'|trans }}</p>
                                    <p class="price">{{ 'week_1_product_2_price'|trans }}</p>
                                    <p class="offer">{{ 'week_1_product_2_offer'|trans }}</p>
                                </div>
                            </footer>
                        </li>
                    </ul>

                </div>

            </div>

            <div class="content">
                <div class="mask">
                    <div class="inner">
                        <h1>{{ 'home_title'|trans }}</h1>
                        <h2>{{ 'home_subtitle'|trans|raw }}</h2>
                        <p>{{ 'home_info_1'|trans }}</p>

                        <p class="button play-button"><span>{{ 'play'|trans }}</span></p>

                        <div class="already-text"><p>{{ 'home_already_played'|trans }}</p></div>

                        <p class="sub-play-text">{{ 'home_sub_play_button'|trans }} <strong>{{ 'week_1_product_1_other_name'|trans }}</strong></p>
                        <p>{{ 'home_info_2'|trans|raw }}</p>
                    </div>
                </div>
            </div>

        </section>

        <section class="game hidden">

            <canvas></canvas>

            <p class="lives"><span>3</span><sub>{{ 'tries_left'|trans }}</sub></p>
            <p class="level"><span>3</span><sup>/12</sup><sub>{{ 'levels'|trans }}</sub></p>

        </section>

        <section class="try-again screen">

            <div class="content">
                <p class="title">{{ 'try_again'|trans }}</p>

                <div class="status">
                    <p class="lives"><span>2</span><sub>{{ 'tries_left'|trans }}</sub></p>
                    <p class="level"><span>10</span><sub>{{ 'levels'|trans }}</sub></p>
                </div>

                <div class="button try-again"><span>{{ 'try_again'|trans }}</span></div>
            </div>

        </section>

        <section class="game-over screen">

            <div class="content">
                <p class="title">{{ 'game_over'|trans }}</p>

                <p class="text">
                    {{ 'game_over_text'|trans|raw }}
                    {{ 'game_over_sub'|trans|raw }}
                </p>

                <ul>
                    <li class="facebook"></li>
                    <li class="twitter"><a href="http://twitter.com/intent/tweet?url=http://uniqlocolors.eu&text={{ 'twitter_share_text'|trans }}"></a></li>

                </ul>

                <p class="replay-button button"><span>{{ 'try_again'|trans }}</span></p>

                <div class="get-notified"><p>{{ 'get_notified'|trans|raw }}</p></div>
            </div>

        </section>

        <section class="screen win">
            <div class="content">
                <p class="title">Yeah!</p>

                <div class="letter">
                    <div class="enveloppe"></div>
                    <div class="push">
                        <p>{{ 'win_info'|trans }}<strong>{{ 'week_2_product_1_other_name'|trans }}</strong></p>
                        <img src="/temp/win.jpg" />
                        <span class="img" data-src="medias/temp/win.jpg"></span>
                    </div>
                </div>

                <form>
                    <p class="info">{{ 'form_info'|trans|raw }}</p>

                    <p class="input-text">
                        <input class="text" name="firstName" id="win-firstname" />
                        <span>{{ 'form_firstname'|trans }}</span>
                    </p>

                    <p class="input-text">
                        <input class="text" name="lastName" id="win-lastname" />
                        <span>{{ 'form_lastname'|trans }}</span>
                    </p>

                    <p class="input-text">
                        <input class="text" name="email" id="win-email" />
                        <span>{{ 'form_email'|trans }}</span>
                    </p>

                    <div class="radios">
                        <p class="radio">
                            <input type="radio" value="female" name="gender" />
                            <i></i>
                            <span>{{ 'form_female'|trans }}</span>
                        </p>
                        <p class="radio">
                            <input type="radio" value="male" name="gender" />
                            <i></i>
                            <span>{{ 'form_male'|trans }}</span>
                        </p>
                    </div>

                    <p class="checkbox">
                        <input type="checkbox" name="kep-me-poster" />
                        <i></i>
                        <span>{{ 'form_newsletter'|trans }}
                    </p>

                    <p class="button submit"><span>{{ 'form_submit'|trans }}</span></p>

                </form>
            </div>
        </section>

        <section class="screen loose">
            <div class="content">
                <div class="squares">
                    <span class="grey"></span>
                    <span class="grey"></span>
                    <span class="red"></span>
                    <span class="black"></span>
                    <span class="black"></span>
                    <span class="black"></span>
                    <span class="grey"></span>
                    <span class="black"></span>
                    <span class="grey"></span>
                </div>
                <div class="no-try"><p>{{ 'game_over_text'|trans }}</p></div>
                <p>{{ 'game_over_sub'|trans }}</p>
            </div>
        </section>

        <section class="tuto screen">
            <div class="content">
                <div class="squares">
                    <span class="grey"></span>
                    <span class="grey"></span>
                    <span class="red"></span>
                    <span class="black"></span>
                    <span class="black"></span>
                    <span class="black"></span>
                    <span class="grey"></span>
                    <span class="black"></span>
                    <span class="grey"></span>
                </div>
                <div class="text">
                    <p>{{ 'tuto_info_1'|trans|raw }}</p>
                    <p>{{ 'tuto_info_2'|trans }}</p>
                </div>
                <div class="loading"><span>{{ 'loading'|trans }}</span></div>
                <div class="button start-button"><span>{{ 'start'|trans }}</span></div>
            </div>
        </section>

        <footer class="main-footer">
            <ul>
                <li href="" target="_blank">{{ 'footer_rules_text'|trans }}</li>
                <li class="facebook-link"><a href="{{ 'footer_facebook'|trans }}" target="_blank"><i></i></a></li>
                <li class="twitter-link"><a href="{{ 'footer_twitter'|trans }}" target="_blank"><i></i></a></li>
                <li class="google-link"><a href="{{ 'footer_google'|trans }}" target="_blank"><i></i><a/></li>
                <li class="instagram-link"><a href="{{ 'footer_instagram'|trans }}" target="_blank"><i></i></a></li>
            </ul>
        </footer>

    </section>

    <script>

        window.locale = '{{ locale }}';

        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-1566247-5', 'auto');
        ga('send', 'pageview');

        // Facebook init

        (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        window.fbAsyncInit = function() {
            FB.init({
                appId      : '734584709943901',
                xfbml      : true,
                version    : 'v2.2'
            });
        };

        // Twitter init

        window.twttr = (function (d, s, id) {
            var t, js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src= "https://platform.twitter.com/widgets.js";
