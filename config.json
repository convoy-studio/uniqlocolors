{
	"src": "web/src/",
	"dev": "web/dev/",
	"dist": "web/dist/",

	"coffee": [
		{
			"src": [
				"coffee/shared/data/**/*.coffee",
				"coffee/shared/libs/**/*.coffee",
				"coffee/shared/**/*.coffee",
				"coffee/desktop/**/*.coffee"
			],
			"dest": "js/desktop",
			"filename": "script.coffee"
		},

		{
			"src": [
				"coffee/shared/data/**/*.coffee",
				"coffee/shared/libs/**/*.coffee",
				"coffee/shared/**/*.coffee",
				"coffee/mobile/**/*.coffee"
			],
			"dest": "js/mobile",
			"filename": "script-mobile.coffee"
		}
	],

	"js": [
		{
			"src": [
				"js/shared/libs/jquery/jquery-2.0.3.min.js",
				"js/shared/**/*.js",
				"js/desktop/**/*.js"
			],
			"dest": "js",
			"filename": "script.js"
		},

		{
			"src": [
				"js/shared/libs/jquery/jquery-2.0.3.min.js",
				"js/shared/**/*.js",
				"js/mobile/**/*.js"
			],
			"dest": "js",
			"filename": "script.mobile.js"
		}

	],

	"sass": [

		{
			"src": ["scss/style.scss"],
			"dest": "css"
		},
		{
			"src": ["scss/style.ui.scss"],
			"dest": "css"
		}
	],

	"favicons": {
		"src": "favicons/",
		"dest": "favicons/",
		"type": [
			{
				"name": "apple-touch-icon",
				"ext": ".png",
				"sizes": [16, 32, 96, 160, 192]
			},
			{
				"name": "favicon",
				"ext": ".png",
				"sizes": [57, 60, 72, 76, 114, 120, 144, 152, 180]
			},
			{
				"name": "ms-tile",
				"ext": ".png",
				"sizes": [144]
			}
		]
	},

	"sprite": [
		{
			"type": "png",
			"src": ["sprite/x1/**/*.png"],
			"dest": ["img/"],
			"template": "sprite/templates/sprite.mustache",
			"filename": "sprite.png",
			"stylename": "sprite.scss"
		}
	]

}